@model IEnumerable<ToDoList.Models.Item>

@{ 
    ViewData["Title"] = "To Do List";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title>To Do List</title>
</head>
<body>
    <h2>To Do List</h2>
    @*<h4>@Html.DisplayNameFor(model => model.ItemId)</h4>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var listItem in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => listItem.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => listItem.Category.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = listItem.ItemId }) |
                    @Html.ActionLink("Details", "Details", new { id = listItem.ItemId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = listItem.ItemId })
                </td>
            </tr>
        }
    </table>

    <p>@Html.ActionLink("Add new item", "Create")</p>
</body>
</html>